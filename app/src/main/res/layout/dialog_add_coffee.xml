<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8FBFF"
    android:layout_margin="10dp"

    app:cardCornerRadius="20dp">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="30dp"
            android:text="Thêm Giày"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Đường dẫn ảnh: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_img"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Loại giày: "
                android:textSize="20dp"
                />

            <Spinner
                android:id="@+id/spn_dialog_listfood_add_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Tên giày: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Giá tiền: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_price"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Size: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_size"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="3"
                android:paddingLeft="10dp"
                android:text="Mô tả: "
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/edt_dialog_listfood_add_des"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="4"
                android:background="@drawable/khung"
                android:textSize="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/btn_dialog_listfood_add_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="#FF3D00"
            android:text="Thêm" />

    </LinearLayout>

</androidx.cardview.widget.CardView>