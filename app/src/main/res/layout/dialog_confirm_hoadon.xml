<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FBFF"
    android:layout_margin="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="4"
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Chi tiết đơn hàng"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:text="99999"
                    android:id="@+id/tv_dialog_invoice_confirm_priceSum"
                    android:layout_width="0dp"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#FF0000"
                    android:text="VND"
                    android:layout_width="0dp"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/tv_dialog_invoice_confirm_content"
                android:layout_marginHorizontal="30dp"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:text="zai zai"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:text="Thời gian: "
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/tv_dialog_invoice_confirm_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="4"
                    android:textSize="20dp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:text="Tên khách hàng: "
                    android:textSize="20dp"
                    />

                <TextView
                    android:id="@+id/tv_dialog_invoice_confirm_user"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:text="Địa chỉ: "
                    android:textSize="20dp"
                    />

                <EditText
                    android:id="@+id/ed_dialog_invoice_confirm_address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="4"
                    android:background="@drawable/custom_editext"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:text="Số điện thoại: "
                    android:textSize="20dp"
                    />

                <EditText
                    android:id="@+id/ed_dialog_invoice_confirm_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="4"
                    android:background="@drawable/custom_editext"
                    android:textSize="20dp" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_dialog_invoice_add_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:backgroundTint="#FF3D00"
                android:text="Xác Nhận Đặt Hàng" />

        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>