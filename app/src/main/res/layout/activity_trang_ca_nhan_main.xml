<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TrangCaNhan_Main">

    <RelativeLayout
        android:id="@+id/rl_navigation_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_border_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/trangcanhan_tv_title"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/lui" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_navigation_top"
        android:layout_marginTop="22dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_border_top"
                android:orientation="vertical"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:id="@+id/ll_navbot_canhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_tienich_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:text="@string/trangcanhan_tv_title_tienich"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ln_lich_su_don_hang"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_ic_lsdh_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/lsdh" />

                        <TextView
                            android:id="@+id/chip_lsdh_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/trangcanhan_tv_title_lichsudonhang"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_taikhoan_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:text="@string/all_tv_title_taikhoan"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ln_thongtincanhan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_ic_thongtin_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ttcn" />

                        <TextView
                            android:id="@+id/chip_thongtin_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/trangcanhan_tv_title_thongtincanhan"
                            android:textColor="@color/black" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ln_thaydoimatkhau"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_ic_thaydoi_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/resetpassword" />

                        <TextView
                            android:id="@+id/chip_thaydoi_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/trangcanhan_tv_title_thaydoimatkhau"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_dangxuat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_ic_logout_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/exit" />

                        <TextView
                            android:id="@+id/chip_logout_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/trangcanhan_tv_title_dangxuat"
                            android:textColor="@color/black" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_hotro_canhan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="15dp"
                        android:text="@string/trangcanhan_tv_title_hotro"
                        android:textColor="@color/black"
                        android:textSize="23dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ln_lienhe"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/btn_trang_ca_nhan"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/img_ic_lienhe_canhan"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/lhe" />

                        <TextView
                            android:id="@+id/chip_lienhe_canhan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/trangcanhan_tv_title_lienhe"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</RelativeLayout>