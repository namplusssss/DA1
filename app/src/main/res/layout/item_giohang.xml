<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_margin="15dp"
        android:background="#FD0622"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_toLeftOf="@+id/btn_item_cart_delete"
            android:text="Xóa"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_item_cart_delete"
            android:src="@drawable/xoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/layout_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#F8FBFF"
        android:outlineSpotShadowColor="@color/black"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="3"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/iv_item_cart_foodImg"
                            android:layout_width="wrap_content"
                            android:src="@drawable/nikeairforce"
                            android:layout_height="130dp" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_item_cart_foodName"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="NIKE AIR FORCE"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/tv_item_cart_foodsize"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="M"
                            android:textColor="#FF5722"
                            android:textSize="15dp"
                            android:textStyle="bold|italic" />
                        <TextView
                            android:id="@+id/tv_item_cart_foodType"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:text="Loại"
                            android:textColor="#FF5722"
                            android:textSize="15dp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/tv_item_cart_foodPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="2900000 VND"
                            android:textColor="#C93142"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/btn_item_cart_quantity_down"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bot"
                            />

                        <TextView
                            android:id="@+id/tv_item_cart_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                        <ImageView
                            android:id="@+id/btn_item_cart_quantity_up"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:src="@drawable/them"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</FrameLayout>
